@using CarDealership.Models;

<h1>List of Cars</h1>

@if (Model.Count == 0)
{
    <p>There are no cars to display</p>
}

<ul>
    @foreach (Car car in Model)
    {
        <li>@car.MakeModel</li>
        <ul>
            <li>@car.Miles</li>
            <li>@car.Price</li>
        </ul>
    }
</ul>

<a href="/cars/new">Add a new car</a>